[Unit]
Description=Rathole Server Service
After=network.target

[Service]
Type=simple
Restart=on-failure
RestartSec=5s
User=rathole
StandardError=journal
StandardOutput=journal

# Multi-instance rathole, systemctl enable --now rathole@configname
ExecStart=/var/lib/proxy/rathole --server /var/lib/proxy/%i.toml

[Install]
WantedBy=multi-user.target